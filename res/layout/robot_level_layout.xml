<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="RobotLevelActivity" >

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_margin="10dp"
                  android:gravity="center_horizontal|center_vertical|center">

        <ImageButton android:id="@+id/btn_black_color"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:background="@null"
                     android:src="@drawable/button_black_style"/>

        <ImageButton android:id="@+id/btn_white_color"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:background="@null"
                     android:src="@drawable/button_white_style"/>
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_margin="10dp">

        <Button android:id="@+id/level_1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_level_style"
                android:text="@string/button_level_1" 
                android:layout_margin="5dp"/>

        <Button android:id="@+id/level_2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_level_style"
                android:text="@string/button_level_2"
                android:layout_margin="5dp"/>

        <Button android:id="@+id/level_3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_level_style"
                android:text="@string/button_level_3"
                android:layout_margin="5dp"/>
    </LinearLayout>
</LinearLayout>
